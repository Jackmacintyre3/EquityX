<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Equity2.MainPage"
             xmlns:pages="clr-namespace:Equity2.Pages">

    <Shell.FlyoutHeader>
        <Grid RowDefinitions="*"
              ColumnDefinitions="*,*,*"
              HeightRequest="100"
              BackgroundColor="#0b6623">
            <Image Source="cryptocurrency.png"
                   HeightRequest="50"
                   Grid.Column="0"/>
            <Label Text="Equity X"
                   Grid.Column="1"
                   FontSize="30"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
            <Image Source="cryptocurrency.png"
                    HeightRequest="50"
                    Grid.Column="2"/>
        </Grid>

    </Shell.FlyoutHeader>

    <FlyoutItem
        Title="Deciduous Trees"
        Icon="tree.png">



    </FlyoutItem>

    <Shell.FlyoutBackdrop>
        <LinearGradientBrush StartPoint="0,0"
                             EndPoint="0,1">
            <GradientStop Color="#5DBB63" Offset="0.1"/>
            <GradientStop Color="#3CB043" Offset="0.6"/>
            <GradientStop Color="#345A21" Offset="1.6"/>

        </LinearGradientBrush>
    </Shell.FlyoutBackdrop>

</Shell>